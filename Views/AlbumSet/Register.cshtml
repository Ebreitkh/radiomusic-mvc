@model MusicRadio.Models.AlbumSet

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card bg-dark text-white">
        <div class="card-header">
            <h4 class="mb-0">Nuevo Álbum</h4>
        </div>
        <div class="card-body">
            <form action="@Url.Action("Register","AlbumSet")" method="post">
                <div class="form-group">
                    <label for="albumName">Nombre del Álbum</label>
                    <input type="text" class="form-control" id="albumName" name="Name" placeholder="Ingrese el nombre del álbum" required>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a class="btn btn-warning" href="@Url.Action("Index", "AlbumSet")">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


